<resources>
    <style name="AppTheme" parent="AppBaseTheme">

        <item name="android:textColorHint">@color/default_hint_color</item>
        <item name="android:textAppearance">@style/text_appearance</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:radioButtonStyle">@style/MyRadioButton</item>
        <item name="android:buttonStyleToggle">@style/toggle_button_style</item>
        <item name="editTextStyle">@style/edit_text_style</item>
        <item name="actionBarStyle">@style/action_bar_style</item>
        <item name="checkboxStyle">@style/checkbox_style</item>
        <item name="android:cursorVisible">true</item>

    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="MyButtonRounded" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/purple_submit_button</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/purple_submit_button_without_round_corners</item>
        <item name="android:textColor">@color/widget_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- non understood -->

    <style name="checkbox_style" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@drawable/text_highlighter</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textColor">@drawable/text_highlighter</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="purple_border_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">47dp</item>
        <item name="android:layout_marginRight">47dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/purple_border_drawable</item>
    </style>

    <style name="purple_button_with_white_text" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/purple_background</item>
        <item name="android:textColor">@color/plain_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">18dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dashboard_button">
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:background">@drawable/rectangle_border_white</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingLeft">26dp</item>
        <item name="android:paddingRight">26dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="fab_add_contact_button">
        <item name="android:background">@drawable/widget_panel_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/dove_gray</item>
    </style>

    <style name="QuickTagRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textSize">13sp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="fab_dashboard_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="fab_dashboard_button.text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/plain_white</item>
    </style>
    <style name="purple_border_button_text_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/purple_background</item>
    </style>
    <style name="status_change_dialog_button">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="white_round_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/round_white_button</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">18dp</item>
    </style>
    <style name="purple_image_button">
        <item name="android:background">@color/purple_background</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="WhiteStickyButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/white_submit_button</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PurpleRoundButton" parent="MyButtonRounded">
        <item name="android:background">@drawable/login_button</item>
        <item name="android:color">@color/accent</item>
    </style>



    <style name="message_text_style">
        <item name="android:textColor">@color/light_gray_font</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="message_text_bold_style">
        <item name="android:textColor">@color/black_font</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="reminder_button">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">17dp</item>
        <item name="android:paddingBottom">17dp</item>
    </style>

    <style name="reminder_button_text" parent="roboto_medium_font">
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/gray_accent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="image_button_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/widget_background</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="ListImageStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/light_grey</item>
        <item name="android:textColorSecondary">@color/light_grey</item>
        <item name="actionMenuTextColor">@color/light_grey</item>
    </style>

    <style name="ListTextStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/light_grey</item>
        <item name="android:textColorSecondary">@color/light_grey</item>
        <item name="actionMenuTextColor">@color/light_grey</item>
    </style>


    <style name="toggle_button_style" parent="android:Widget.CompoundButton">
        <item name="android:textColor">@drawable/text_highlighter</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="edit_text_style" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
    </style>

    <style name="box_style_edit_text">
        <item name="android:background">@drawable/widget_border_drawable</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="action_bar_style" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/action_bar_text_style</item>
        <item name="displayOptions">useLogo|showHome|showTitle|homeAsUp</item>
    </style>

    <style name="text_appearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/default_font_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="action_bar_text_style" parent="Base.Widget.AppCompat.ActionBar">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="roboto_light_font">
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="roboto_medium_font">
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="roboto_regular_font">
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- unused -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
