<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.android.requests.activities.NewAddress">

    <include layout="@layout/toolbar">

    </include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp">

    <android.support.v7.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address_flatno"
        style="@style/edit_text_style"
        android:hint="Flat Number, Building Name"/>

    <android.support.v7.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address_type"
        android:layout_below="@+id/address_flatno"
        android:layout_marginTop="10dp"
        style="@style/edit_text_style"
        android:hint="Home, Office"/>

    <android.support.v7.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address_location"
        android:layout_below="@+id/address_type"
        android:layout_marginTop="10dp"
        style="@style/edit_text_style"
        android:hint="Select Location"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/save_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:background ="@drawable/round_corner_button"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/address_location"
        android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
